<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <targets>
    <target name="asyncFile" xsi:type="AsyncWrapper"  queueLimit="5000" overflowAction="Discard">
      <!-- 10MB 一个文件-->
      <!--<target name="logfile"
              xsi:type="File"
              fileName="${basedir}/logs/${shortdate}/${level}.txt"
              archiveFileName="${basedir}/${shortdate}/${level}{#####}.txt"
              archiveAboveSize="10485760"
              archiveNumbering="Sequence"
              concurrentWrites="true"
              layout="${time}${message}" />-->

      <target 
        xsi:type="File" 
        name="allfile" 
        fileName="${basedir}/logs/nlog-all-${shortdate}.log"
        layout="${longdate}|${logger}|${uppercase:${level}}|${message} ${exception}" />
      
      <target 
        xsi:type="File" 
        name="ownfile" 
        fileName="${basedir}/logs/nlog-own-${shortdate}.log"
        layout="${longdate}|${logger}|${uppercase:${level}}|${message} ${exception}" />
      
      <target xsi:type="Null" name="blackhole" />
      
      
    </target>
  </targets>
  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="*" minlevel="Info" writeTo="allfile" />
    
    <!--Skip Microsoft logs and so log only own logs-->
    <logger name="Microsoft.*" minlevel="Info" writeTo="blackhole" final="true" />
    
    <logger name="*" minlevel="Info" writeTo="ownfile" />
    
  </rules>
</nlog>