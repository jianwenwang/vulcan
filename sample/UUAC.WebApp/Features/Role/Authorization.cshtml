@{
    Layout = "../Shared/_Layout_For_Dailog";
}

@section styles{
    <link rel="stylesheet" href="/css/plugin/xjtree.css" />
    <style type="text/css">
        .tree-wrap{
            margin:5px 20px;
        }
    </style>
}
<div class="choose">
    <div class="choose-top">
        <h4>角色授权</h4>
        <a href="javascript:;" id="btnClose" class="aclose">&times;</a>
    </div>
   
    <div class="row content-wrap">
        <div class="tree-wrap">
            <div id="userTree"></div>
        </div>
    </div>
        
    
    <div class="choose-bottom">
        <button id="btnOk" class="btn btn-success btn-sm no-border"> 确 定 </button>
        <button id="btnCancel" class="btn btn-white btn-default no-border"> 取 消 </button>
    </div>
</div>

@section scripts{
<script type="text/javascript">

    window._utils = {};
    window.options = {
        roleCode: "@TempData["RoleCode"]",        
        saveUrl: '@Url.Action("SaveRolePrivileges")',
        loadTreeUrl: "@Url.Action("QueryPrivilegeTree")"
    }
</script>
    <script src="/js/plugin/xjtree.js"></script>
    <script src="~/js/app/role/authorization.js"></script>
}
