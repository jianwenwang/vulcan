@{
    Layout = "../Shared/_Layout_For_Dailog";
}
@model UUAC.Entity.IPrivilege
@section styles{
    <style type="text/css">
        .control-label {
            text-align: right;
        }
    </style>

}
<div class="choose">
    <div class="choose-top">
        <h4>@(string.IsNullOrEmpty(Model.PrivilegeCode) ? "新建权限" : "修改权限信息")</h4>
        <a href="javascript:;" id="btnClose" class="aclose">&times;</a>
    </div>
    <div class="row" style="margin-top:20px">
        <div class="col-xs-12">
            <form class="form-horizontal" method="post" action="@Url.Action("Save", new {type = string.IsNullOrEmpty(Model.PrivilegeCode) ? 1 : 2})" id="frmEdit">
                <div class="form-group">
                    <label class="col-xs-3 control-label">上级权限:</label>
                    <div class="col-xs-6">
                        <span class="form_tip">@Model.ParentName</span>
                        <input type="hidden" id="ParentCode" name="ParentCode" value="@Model.ParentCode"/>
                        <input type="hidden" id="AppCode" name="AppCode" value="@Model.AppCode" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label">权限标识:</label>
                    <div class="col-xs-6">
                        <input type="text" id="PrivilegeCode" name="PrivilegeCode" value="@Model.PrivilegeCode" placeholder="权限标识" class="form-control" @(string.IsNullOrEmpty(Model.PrivilegeCode) ? "" : " readonly")/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label">权限名称:</label>
                    <div class="col-xs-6">
                        <input type="text" id="PrivilegeName" name="PrivilegeName" value="@Model.PrivilegeName" placeholder="权限名称" class="form-control"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label">权限资源:</label>
                    <div class="col-xs-6">
                        <input type="text" id="Resource" name="Resource" value="@Model.Resource" placeholder="权限资源" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label">权限标记:</label>
                    <div class="col-xs-6">
                        <input type="text" id="Mark" name="Mark" value="@Model.Mark" placeholder="权限标记" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label">权限类型:</label>
                    <div class="col-xs-6">
                        <select asp-for="@Model.PrivilegeType" rs-code="PRIVILEGE_TYPE" has-all-option="true" class="form-control"></select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label">备注:</label>
                    <div class="col-xs-6">
                        <textarea id="Remark" name="Remark" placeholder="系统介绍" class="form-control">@Model.Remark</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-xs-3 control-label">排序号:</label>
                    <div class="col-xs-3">
                        <input type="text" id="Sequence" name="Sequence" value="@Model.Sequence" placeholder="排序号" class="form-control"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="choose-bottom">
        <button id="btnSave" class="btn btn-success btn-sm no-border"> 确 定 </button>
        <button id="btnCancel" class="btn btn-white btn-default no-border"> 取 消 </button>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        window.options = {
            saveUrl: "@Url.Action("SaveUser")",
            checkCodeUrl:"@Url.Action("CheckCode", new { id = Model.PrivilegeCode, appCode = Model.AppCode})"
        }
    </script>
    <script src="~/js/app/privilege/edit.js"></script>

}